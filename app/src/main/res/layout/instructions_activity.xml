<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/montserrat_extrabolditalic"
        android:layout_marginStart="45dp"
        android:text="Welcome, Adeoye!"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/green"/>

    <LinearLayout
        android:id="@id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome"
            android:text="Please read the instructions very well before proceeding."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/montserrat_extrabolditalic"
            android:text="CSC 101"
            android:textColor="@color/green"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/bullets"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:background="@drawable/radio_button_pad"
        android:backgroundTint="@color/option_back"
        android:text="@string/instructs"
        android:textSize="23sp"/>

    <Button
        android:id="@+id/startExam"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@id/bullets"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30sp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/green"
        android:onClick="TestActivity"
        android:text="Start Exam"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/nwhite"
        android:textSize="23sp"
        app:cornerRadius="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startExam"
        android:layout_marginTop="260dp"
        android:layout_marginStart="10dp"
        android:text="c2024 Computer Science Department, FUOYE" />
</RelativeLayout>