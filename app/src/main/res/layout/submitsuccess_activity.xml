<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/completeicon"
        android:layout_width="244dp"
        android:layout_height="246dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/completed" />
    <TextView
        android:id="@+id/success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/completeicon"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Success"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/success"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Submitted Successfully"
        android:textSize="20sp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/youScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:text="YOU SCORED:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/percentScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/youScore"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:text="60%"
        android:textColor="@color/black"
        android:textSize="80sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/actionbtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/percentScore"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/answers"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30sp"
            android:backgroundTint="@color/teal_700"
            android:text="View Answers"
            app:cornerRadius="8dp" />
        <Button
            android:id="@+id/restart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:backgroundTint="@color/red"
            android:text="restart"
            android:textSize="13sp"
            app:cornerRadius="8dp" />

    </LinearLayout>

</RelativeLayout>